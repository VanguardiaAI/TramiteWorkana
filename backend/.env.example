# Variables de entorno para la aplicación
# Renombrar este archivo a .env y agregar los valores correspondientes

# Configuración de seguridad
SECRET_KEY=cambiar_por_una_clave_secreta_aleatoria_larga

# Configuración de correo electrónico
SENDGRID_API_KEY=tu_api_key_de_sendgrid
EMAIL_SENDER=tu_email@dominio.com

# Configuración de la base de datos
# Para SQLite (valor por defecto)
# DATABASE_URI=sqlite:///tramites.db

# Para MySQL
# DATABASE_URI=mysql://usuario:contraseña@localhost/tramites

# Para PostgreSQL
# DATABASE_URI=postgresql://usuario:contraseña@localhost/tramites

# Configuración del servidor
PORT=5000
HOST=0.0.0.0

# Entorno (development, production)
FLASK_ENV=production

# JWT para autenticación
JWT_SECRET=tu_clave_secreta_jwt

# Configuración de SendGrid
EMAIL_FROM=nombre@tudominio.com

# IDs de plantillas de SendGrid
SENDGRID_TEMPLATE_FINALIZADO=d-xxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_INCIDENCIA=d-xxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_PAGO=d-xxxxxxxxxxxxxxxxxxxx
